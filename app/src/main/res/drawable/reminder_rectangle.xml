<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid
                android:color="@color/black_transparent"/>
            <corners
                android:radius="@dimen/corner_radius" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="@dimen/rectangle_shift"
        android:top="0dp"
        android:bottom="@dimen/rectangle_shift">
        <shape android:shape="rectangle">
            <solid
                android:color="@android:color/white"/>
            <corners
                android:radius="@dimen/corner_radius" />
            <stroke
                android:color="@color/sh_prussian_blue_medium"
                android:width="1dp"/>
            <padding
                android:left="@dimen/rectangle_padding"
                android:top="@dimen/rectangle_padding"
                android:right="@dimen/rectangle_padding"
                android:bottom="@dimen/rectangle_padding" />
        </shape>
    </item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/reminder_rectangle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dpi_10dp">

        <!-- Smart Health logo -->
        <ImageView
            android:layout_width="@dimen/dpi_250dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:padding="@dimen/dpi_10dp"
            android:src="@drawable/header_logo" />

        <LinearLayout
            android:layout_width="@dimen/dpi_850dp"
            android:layout_height="match_parent"
            android:background="@color/sh_prussian_blue_light"
            android:orientation="vertical"
            android:padding="@dimen/dpi_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dpi_10dp">

                <!-- Survey title -->
                <TextView
                    android:id="@+id/no_feedback_survey_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dpi_5dp"
                    android:textColor="@color/sh_blue_dark"
                    android:textSize="@dimen/dpi_50sp" />

            </LinearLayout>

            <!-- Survey content -->
            <LinearLayout
                android:id="@+id/no_feedback_action_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dpi_100dp"
                android:layout_marginBottom="@dimen/dpi_20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/no_feedback_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dpi_10dp"
                    android:text="@string/close_alert_text"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/dpi_35sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>